<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Link Analytics</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
    
    <!-- Admin Navigation Bar -->
    <nav class="bg-white shadow-md">
        <div class="container mx-auto px-4 max-w-7xl">
            <div class="flex justify-between items-center h-16">
                <!-- Logo/Title -->
                <div class="flex-shrink-0 flex items-center">
                    <h1 class="text-xl font-bold text-gray-900">Diamond CMS</h1>
                </div>
                <!-- Navigation Links (with permission checks) -->
                <div class="hidden md:flex md:space-x-8">
                    <a href="/admin" class="text-gray-500 hover:text-gray-900 border-b-2 border-transparent hover:border-gray-300 font-medium px-1 py-4">Dashboard</a>
                    <a href="/admin/manage" class="text-gray-500 hover:text-gray-900 border-b-2 border-transparent hover:border-gray-300 font-medium px-1 py-4">Manage Stones</a>
                    
                    <% if (user.is_superadmin) { %>
                        <a href="/admin/users" class="text-gray-500 hover:text-gray-900 border-b-2 border-transparent hover:border-gray-300 font-medium px-1 py-4">Manage Users</a>
                    <% } %>
                    
                    <a href="/admin/history" class="text-gray-500 hover:text-gray-900 border-b-2 border-transparent hover:border-gray-300 font-medium px-1 py-4">History</a>
                    
                    <% if (user.is_superadmin || user.can_view_analytics) { %>
                        <a href="/admin/analytics" class="text-blue-600 border-b-2 border-blue-600 font-medium px-1 py-4">Analytics</a>
                    <% } %>
                </div>
                <!-- User/Logout -->
                <div class="flex items-center">
                    <span class="text-gray-500 mr-4">Welcome, <%= user.username %>!</span>
                    <a href="/logout" class="text-sm text-blue-600 hover:underline">Log Out</a>
                </div>
            </div>
        </div>
    </nav>
    
    <!-- Page Header -->
    <header class="bg-white shadow-sm">
        <div class="container mx-auto px-4 py-4 max-w-7xl">
            <h2 class="text-2xl font-bold text-gray-900">Master Link History (Analytics)</h2>
        </div>
    </header>

    <main class="container mx-auto px-4 py-8 max-w-7xl">

        <!-- NEW: Search & Filter Form -->
        <div class="bg-white p-6 rounded-lg shadow-lg mb-8">
            <form action="/admin/analytics" method="GET">
                <h3 class="text-xl font-semibold mb-4">Filter Clicks</h3>
                <!-- Top row of filters -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                    <div>
                        <label for="stock_id" class="block text-sm font-medium text-gray-700">Stock ID</label>
                        <input type="text" name="stock_id" id="stock_id" class="mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" value="<%= searchParams.stock_id || '' %>">
                    </div>
                    <div>
                        <label for="country" class="block text-sm font-medium text-gray-700">Country</label>
                        <input type="text" name="country" id="country" class="mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" value="<%= searchParams.country || '' %>">
                    </div>
                    <div>
                        <label for="social_source" class="block text-sm font-medium text-gray-700">Auto-Detected Source</label>
                        <input type="text" name="social_source" id="social_source" class="mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" value="<%= searchParams.social_source || '' %>" placeholder="e.g. Google, Facebook, Direct">
                    </div>
                </div>
                <!-- Bottom row of filters -->
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div>
                        <label for="utm_source" class="block text-sm font-medium text-gray-700">UTM Source</label>
                        <input type="text" name="utm_source" id="utm_source" class="mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" value="<%= searchParams.utm_source || '' %>" placeholder="e.g. whatsapp, qrcode">
                    </div>
                    <div>
                        <label for="browser" class="block text-sm font-medium text-gray-700">Browser</label>
                        <input type="text" name="browser" id="browser" class="mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" value="<%= searchParams.browser || '' %>">
                    </div>
                    <div>
                        <label for="os" class="block text-sm font-medium text-gray-700">Operating System</label>
                        <input type="text" name="os" id="os" class="mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" value="<%= searchParams.os || '' %>">
                    </div>
                    <div class="flex items-end space-x-2">
                        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg">
                            Filter
                        </button>
                        <a href="/admin/analytics" class="w-full bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded-lg text-center">
                            Clear
                        </a>
                    </div>
                </div>
            </form>
        </div>

        <!-- Analytics Log Table -->
        <div class="bg-white p-8 rounded-lg shadow-lg overflow-x-auto">
            <h3 class="text-2xl font-bold mb-6">Click History (Page <%= currentPage %> of <%= totalPages %>)</h3>
            
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Location</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Device</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Source (Auto)</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Source (UTM)</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Timestamp</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% if (clicks.length === 0) { %>
                        <tr>
                            <td colspan="6" class="px-6 py-4 text-center text-gray-500">
                                No link clicks found matching your criteria.
                            </td>
                        </tr>
                    <% } %>
                    
                    <% clicks.forEach(click => { %>
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-medium">
                                <a href="/diamonds/<%= click.stock_id %>" target="_blank" class="text-blue-600 hover:underline"><%= click.stock_id %></a>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <!-- FLAG FIX: Show Country Flag -->
                                <div class="flex items-center">
                                    <% if (click.country_code) { %>
                                        <!-- 
                                          THIS IS THE FIX:
                                          It was missing '.toLowerCase()'
                                        -->
                                        <img src="https://flagcdn.com/w20/<%= click.country_code.toLowerCase() %>.png" alt="<%= click.country_code %>" class="h-4 w-6 inline-block mr-2 border border-gray-300">
                                    <% } else if (click.country) { %>
                                        <span class="w-6 h-4 mr-2 inline-block"></span> <!-- Placeholder for alignment -->
                                    <% } %>
                                    <span>
                                        <%= click.city || '...' %>, <%= click.country || '...' %>
                                    </span>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <%= click.browser || '...' %> on <%= click.os || '...' %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <!-- 
                                  THIS IS THE FIX:
                                  The broken 'else' is replaced with a clean 
                                  EJS variable block. This fixes the Syntax Error.
                                -->
                                <%
                                    let colorClass = 'bg-gray-100 text-gray-800'; // Default
                                    if (click.social_source === 'Google') {
                                        colorClass = 'bg-blue-100 text-blue-800';
                                    } else if (click.social_source === 'Facebook') {
                                        colorClass = 'bg-blue-200 text-blue-900';
                                    } else if (click.social_source === 'Direct') {
                                        colorClass = 'bg-gray-100 text-gray-800';
                                    } else if (click.social_source) { // 'Other', 'WhatsApp', etc.
                                        colorClass = 'bg-green-100 text-green-800';
                                    }
                                %>
                                <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full <%= colorClass %>">
                                    <%= click.social_source || 'N/A' %>
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800" title="Medium: <%= click.utm_medium %>, Campaign: <%= click.utm_campaign %>">
                                    <%= click.utm_source || 'N/A' %>
                                </span>
                            </td>
                             <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <%= new Date(click.timestamp).toLocaleString() %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

            <!-- Pagination -->
            <div class="mt-6 flex items-center justify-between">
                <p class="text-sm text-gray-700">
                    Page <%= currentPage %> of <%= totalPages %>
                </p>
                <div class="flex space-x-2">
                    <!-- 
                      FIXED: This query string now includes ALL
                      the search parameters so filters work 
                      across pages.
                    -->
                    <% 
                        let queryParams = `&stock_id=${searchParams.stock_id || ''}`;
                        queryParams += `&country=${searchParams.country || ''}`;
                        queryParams += `&social_source=${searchParams.social_source || ''}`;
                        queryParams += `&utm_source=${searchParams.utm_source || ''}`;
                        queryParams += `&browser=${searchParams.browser || ''}`;
                        queryParams += `&os=${searchParams.os || ''}`;
                    %>

                    <!-- Previous Page -->
                    <% if (currentPage > 1) { %>
                        <a href="/admin/analytics?page=<%= currentPage - 1 %><%= queryParams %>"
                           class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                            Previous
                        </a>
                    <% } else { %>
                        <span class="px-4 py-2 text-sm font-medium text-gray-400 bg-gray-100 border border-gray-300 rounded-md cursor-not-allowed">
                            Previous
                        </span>
                    <% } %>

                    <!-- Next Page -->
                    <% if (currentPage < totalPages) { %>
                        <a href="/admin/analytics?page=<%= currentPage + 1 %><%= queryParams %>"
                           class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                            Next
                        </a>
                    <% } else { %>
                        <span class="px-4 py-2 text-sm font-medium text-gray-400 bg-gray-100 border border-gray-300 rounded-md cursor-not-allowed">
                            Next
                        </span>
                    <% } %>
                </div>
            </div>
            <!-- END: Pagination -->

        </div>
    </main>

</body>
</html>
